<%= link_to 'logout', destroy_user_session_path, method: :delete , data: {confirm: 'Are you Sure?'}%>
<main>
<%= form_tag '/next',remote: true, class: :question do%>	
	<h4 class="well"><%= @question.question_content %></h4>
	<div>
		<div>
			<div><%= radio_button_tag 'answer_option','option_a' %><%= @question.option_a %></div>
			<div><%= radio_button_tag 'answer_option','option_b' %><%= @question.option_b %></div>
		</div>
		<div>	
			<div><%= radio_button_tag 'answer_option','option_c' %><%= @question.option_c %></div>
			<div><%= radio_button_tag 'answer_option','option_d' %><%= @question.option_d %></div>
		</div>
		<br>
	</div>
	<%= hidden_field_tag 'question_id', @question.id %>
		<input type="submit" class="btn btn-default" id="submit_question">
<% end %>
	<div id="change-question">
		<%= form_tag '/next_question',class: 'next-from-start' do %>
			<%= hidden_field_tag 'question_id',@question.id %>
			<div type="submit" class="btn btn-default" id= 'start_next_question'>Next</div>
		<% end %>	
	</div>
</main>
<% counter=1 %>
<aside>
	<div>
		<% @questions.each do |q| %>
			<div>
				<% str = counter.to_s %>
				<% counter+=1 %>
				<%= link_to str,"/question/#{q.id}" %>
			</div>
		<% end %>	
	</div>
</aside>
<div id="timer"></div>
<div class="progress">
  <div class="progress-bar progress-bar-striped active" role="progressbar"
  aria-valuenow="<%= @percentage %>" aria-valuemin="0" aria-valuemax="100" style= "width: <%= @percentage %>%">
    <%= @percentage %>% Complete
  </div>
</div>
